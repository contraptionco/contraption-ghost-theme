{{!< app}}

{{#author}}
<div class="container pt-16 pb-12">
  <div class="flex items-center gap-6 mb-8">
    {{#if profile_image}}
      <img class="w-16 h-16 rounded-full object-cover" src="{{profile_image}}" alt="{{name}}">
    {{/if}}
    <div>
      <h1 class="font-sans text-3xl sm:text-4xl font-semibold tracking-tight text-gray-950">{{name}}</h1>
      {{#if bio}}
        <p class="font-serif text-lg text-gray-600 mt-1">{{bio}}</p>
      {{/if}}
    </div>
  </div>

  {{#if website}}
    <div class="flex gap-4 text-sm font-sans">
      <a href="{{website}}" target="_blank" rel="noopener" class="text-gray-600 hover:text-forest transition-colors duration-300">Website</a>
    </div>
  {{/if}}
</div>

<div class="container pb-16">
  <h2 class="font-sans text-xs font-semibold tracking-[0.15em] uppercase text-gray-500 mb-8">Posts by {{name}}</h2>
  <div class="gh-postfeed">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
      {{#foreach posts}}
        <div class="reveal">
          {{> "card"}}
        </div>
      {{/foreach}}
    </div>
  </div>

  <div class="gh-pagination flex justify-center mt-8">
    {{pagination}}
  </div>
</div>
{{/author}}

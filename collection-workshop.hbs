{{!< app}}

{{#contentFor "title"}}Workshop by Contraption. Co{{/contentFor}}
{{#contentFor "head"}}
  <meta property="og:title" content="Workshop by Contraption Co">
  <meta name="twitter:title" content="Workshop by Contraption Co. â€” Notes on work in progress.">
{{/contentFor}}
{{#contentFor "viewportClass"}}bg-offwhite-warm{{/contentFor}}

{{!-- Header band --}}
<div class="bg-gray-850 py-10 md:py-14">
  <div class="container text-center">
    <img src="{{asset "images/projects/workshop.svg"}}" alt="Workshop" class="h-10 md:h-12 w-auto mx-auto workshop-logo-light">
    <h1 class="sr-only">Workshop</h1>
    <p class="font-serif text-gray-400 text-lg mt-3">Notes on work in progress.</p>
    {{#unless @member}}
    <a href="#/portal/signup" data-portal="signup" class="inline-block mt-5 font-sans text-xs font-medium tracking-[0.1em] uppercase text-gray-400 underline underline-offset-4 decoration-gray-600 hover:text-white hover:decoration-white transition-colors duration-300">
      Subscribe
    </a>
    {{/unless}}
  </div>
</div>

<div class="container pt-10 md:pt-14">
  {{!-- Workshop posts grid --}}
  <div class="mb-16">
    {{#if posts}}
      <div class="gh-postfeed">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
          {{#foreach posts}}
            <div class="reveal">
              {{> "card"}}
            </div>
          {{/foreach}}
        </div>
      </div>

      {{!-- Pagination --}}
      <div class="gh-pagination flex justify-center mt-8">
        {{pagination}}
      </div>

      {{!-- If JS isn't enabled, fallback to standard pagination --}}
      <noscript>
        <div class="gh-pagination flex justify-center mt-8">
          {{pagination}}
        </div>
      </noscript>
    {{else}}
      <p class="text-gray-600">No workshop posts yet. Check back soon.</p>
    {{/if}}
  </div>
</div>

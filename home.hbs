{{!< app}}
<div class="gh-page">
  {{!-- Special homepage content --}}
  <div class="container py-8 md:py-12 lg:py-16">
    <div class="flex flex-col mb-12 md:mb-16">
      <div class="w-full mb-8 md:mb-0">
        <div class="prose prose-xl dark:prose-invert">
          <h1 class="!text-5xl lg:!text-6xl  display font-semibold">
            Crafting digital tools
          </h1>
          <p class="!text-2xl lg:!text-3xl display font-medium text-pretty">
            <a href="/projects" class="text-gray-950 dark:text-gray-050 underline decoration-green hover:decoration-green hover:text-green">Projects</a>, <a href="/workshop" class="text-gray-950 dark:text-gray-050 underline decoration-brown hover:decoration-brown hover:text-brown">workshop</a>, and <a href="/press/" class="text-gray-950 dark:text-gray-050 underline decoration-vividBlue hover:decoration-vividBlue hover:text-vividBlue">press</a> by
            <a href="https://www.philipithomas.com/" target="_blank" rel="noopener" class="text-gray-950 dark:text-gray-050 underline decoration-blue hover:decoration-blue hover:text-blue">Philip I. Thomas</a>.
          </p>
          {{#unless @member}}
          <p class="text-xl lg:text-2xl display font-medium mt-6">
            Join {{total_members}} other subscribers:
          </p>
          {{/unless}}
        </div>

        {{#unless @member}}
          <div class="mt-3">
            <form data-members-form="subscribe" class="inline-flex flex-col items-start w-full">
              <div class="flex items-center w-full md:w-2/3 lg:w-1/2">
                <input data-members-email type="email" placeholder="Enter your email"
                  class="border border-gray-900 dark:border-gray-100 p-2 flex-grow outline-none focus:outline-none w-full focus:ring-0 focus:border-gray-900 dark:focus:border-gray-100 h-10 dark:bg-gray-800 dark:text-gray-100"
                  required autofocus>
                <button type="submit" class="btn btn-primary relative" data-loading-text="Subscribing">
                  <span class="btn-text font-bold">Subscribe</span>
                  <span class="btn-arrow">{{> "icons/arrow-right"}}</span>
                </button>
              </div>
              <div class="mt-2">
                <p data-members-error class="text-red text-xs comp hidden"></p>
                <p data-members-success class="text-green text-xs comp hidden">Great! Check your inbox and click the link to confirm your subscription.</p>
              </div>
            </form>
          </div>
        {{/unless}}
      </div>
    </div>

    {{!-- Recent posts --}}
    <div id="recent-posts" class="gh-postfeed">
      <h2 class="text-2xl font-semibold mb-8 display">Featured posts</h2>
      <div class="flex flex-wrap -mx-4">
        {{#foreach posts}}
          <div class="w-full md:w-1/2 lg:w-1/3 px-4 mb-10">
            {{> "card"}}
          </div>
        {{/foreach}}
      </div>
    </div>

    {{!-- Pagination --}}
    <div class="gh-pagination flex justify-center mt-8">
      {{pagination}}
    </div>
  </div>
</div>

{{!< blank}}
{{!-- This is a special page with no header or footer --}}

{{#post}}
<html lang="{{@site.locale}}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Check your email - {{@site.title}}</title>
    <meta name="robots" content="noindex,nofollow">

    {{!-- Preconnect + preload critical fonts --}}
    <link rel="preconnect" href="https://fonts.contraption.co" crossorigin>
    <link rel="preload" href="https://fonts.contraption.co/klim/soehne-buch.woff2" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="https://fonts.contraption.co/klim/soehne-halbfett.woff2" as="font" type="font/woff2" crossorigin>

    {{!-- Styles --}}
    <link rel="stylesheet" type="text/css" href="{{asset "built/index.css"}}">

    {{!-- Ghost outputs required script tags --}}
    {{ghost_head}}
</head>
<body class="bg-indigo text-white font-sans antialiased flex items-center justify-center min-h-screen w-full">
    <div class="max-w-xl text-center px-4">
        <h1 class="font-sans text-4xl lg:text-5xl font-semibold tracking-tight">Check your email</h1>
        <p class="font-serif text-xl text-white/60 mt-6 leading-relaxed">Click the link to finish signing up.</p>
        <div class="mt-10">
            <a href="{{@site.url}}" class="no-underline font-mono text-xs font-semibold tracking-[0.12em] uppercase text-white/60 hover:text-white transition-colors duration-300 inline-flex items-center">
                <span>Keep reading</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2">
                    <path d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                </svg>
            </a>
        </div>
    </div>

    {{!-- Ghost outputs required script tags --}}
    {{ghost_foot}}
</body>
</html>
{{/post}}

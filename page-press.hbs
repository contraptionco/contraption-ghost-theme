{{!< app}}

{{#contentFor "title"}}Get posts in the mail | Contraption{{/contentFor}}
{{#contentFor "head"}}
  <meta property="og:title" content="Get posts in the mail | Contraption">
{{/contentFor}}

<div class="container">
  <div class="flex flex-col md:flex-row md:gap-8 lg:gap-12 py-8 items-center justify-center" style="min-height: calc(100vh - 88px);">
    <div class="w-full md:w-1/2 flex flex-col justify-center text-center md:text-left">
      <div class="max-w-2xl mx-auto md:mx-0">
        <h1 class="text-4xl sm:text-5xl font-bold text-gray-950 dark:text-white leading-tight text-pretty">
          {{#if @member.paid}}Thank you{{else}}Print edition{{/if}}
        </h1>
        {{#unless @member.paid}}
          <div class="mt-4 md:mt-6 lg:mt-8 font-medium text-gray-800 dark:text-gray-200 text-lg sm:text-xl md:text-2xl text-pretty">
            Get every new Contraption essay printed and mailed to you. Read each right away, or collect a stack for later screen-free perusing.
          </div>
        {{/unless}}

        <div class="mt-8 space-y-6">
          {{#if @member.paid}}
            <div class="space-y-4 text-left text-lg text-gray-800 dark:text-gray-200 leading-relaxed">
              <p>
                I will mail you new posts as they are published. Delivery takes about one week in the USA, and two weeks globally.
                <span>Claim free Postcard premium with the code:</span>
                <span class="inline-flex items-center px-2.5 py-1 rounded-md bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700 text-gray-900 dark:text-gray-050 font-mono text-sm">ESPRESSO</span>
              </p>
              <p>
                Any questions? Email me at
                <a href="mailto:philip@contraption.co" class="underline decoration-gray-400 dark:decoration-gray-600 hover:text-gray-900 dark:hover:text-gray-100">philip@contraption.co</a>
              </p>
              <div class="flex flex-wrap gap-3 pt-2">
                <a href="https://billing.stripe.com/p/login/00w4gB7P21zn0qVae19oc00" class="btn btn-primary" data-prefill-param="prefilled_email" {{#if @member.email}}data-member-email="{{@member.email}}"{{/if}}>
                  <span class="btn-text">Billing &amp; shipping</span>
                  <span class="btn-arrow">{{> "icons/arrow-right"}}</span>
                </a>
              </div>
            </div>
          {{else}}
            <div class="grid gap-3 sm:flex sm:flex-wrap">
              <a href="https://buy.stripe.com/00w4gB7P21zn0qVae19oc00" class="btn btn-primary w-full sm:w-auto" data-prefill-param="locked_prefilled_email" {{#if @member}}data-member-email="{{@member.email}}"{{/if}}>
                <span class="btn-text">$15/mo USA delivery</span>
                <span class="btn-arrow">{{> "icons/arrow-right"}}</span>
              </a>
              <a href="https://buy.stripe.com/8x26oJedqb9X6Pjfyl9oc01" class="btn btn-primary w-full sm:w-auto" data-prefill-param="locked_prefilled_email" {{#if @member}}data-member-email="{{@member.email}}"{{/if}}>
                <span class="btn-text">$20/mo global</span>
                <span class="btn-arrow">{{> "icons/arrow-right"}}</span>
              </a>
            </div>

            {{#unless @member}}
              <p class="text-sm text-gray-700 dark:text-gray-300">
                Already subscribed? <a class="underline underline-offset-4 decoration-gray-400 dark:decoration-gray-600 hover:text-gray-900 dark:hover:text-gray-100" href="#/portal/signin" data-portal="signin">Log in</a>
              </p>
            {{/unless}}
          {{/if}}
        </div>
      </div>
    </div>

    <div class="hidden md:flex md:w-1/2 md:items-center md:justify-center">
      <div class="relative w-full" style="max-width: 450px; max-height: 600px;">
        <div class="relative w-full" style="padding-bottom: 133.33%;">
          <img src="{{asset "images/onibus-small.jpg"}}" alt="Onibus coffee and mail setup" class="absolute inset-0 w-full h-full object-cover object-center">
        </div>
      </div>
    </div>
  </div>
</div>

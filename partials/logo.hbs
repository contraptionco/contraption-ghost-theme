{{#is "post"}}
  {{#post}}
    {{#has tag="workshop"}}
      <a href="/workshop/">
        <img src="{{asset "images/logo/workshop-by-contraption.svg"}}" class="w-auto h-8 md:h-10"
          alt="Workshop by Contraption" />
      </a>
    {{else}}
      <a href="/">
        <img src="{{asset "images/logo/wordmark.svg"}}" class="w-auto h-6 fill-current text-gray-950 fill-gray-950 md:h-6"
          alt="{{@site.title}}" />
      </a>
    {{/has}}
  {{/post}}
{{else}}
  <a href="/">
    <img src="{{asset "images/logo/wordmark.svg"}}" class="w-auto h-6 fill-current text-gray-950 fill-gray-950 md:h-6"
      alt="{{@site.title}}" />
  </a>
{{/is}}

<header class="py-4 md:py-6">
  <div class="container">
    <nav class="relative z-40 flex items-center justify-between w-full">
      {{> "logo"}}

      {{!-- Check if hideNavAndSearch prop is not true --}}
      <div class="flex items-center w-full justify-end space-x-2 md:space-x-5">
        {{#unless hideNavAndSearch}}
          {{#foreach @site.navigation}}
            <a href="{{url}}" class="inline-block px-3 py-2 font-sans text-[13px] font-semibold tracking-[0.04em] uppercase text-gray-700 hover:text-gray-900 transition-colors duration-300">
              {{label}}
            </a>
          {{/foreach}}

          {{search}}

          <div class="flex items-center space-x-4 md:space-x-5">
            {{#unless @member}}
              <a href="#/portal/signin" data-portal="signin" class="inline-block px-3 py-2 font-sans text-[13px] font-medium tracking-[0.04em] uppercase text-gray-700 hover:text-gray-900 transition-colors duration-300">
                Sign in
              </a>
              {{#unless @site.members_invite_only}}
                <a class="btn btn-primary" href="#/portal/signup" data-portal="signup">
                  <span class="btn-text">Join</span>
                  <span class="btn-arrow">{{> "icons/arrow-right"}}</span>
                </a>
              {{/unless}}
            {{else}}
              <div class="relative" data-member-menu>
                <button type="button" class="inline-flex items-center justify-center rounded-full text-gray-700 hover:opacity-80 focus:outline-none focus:ring-0 focus:ring-offset-0 transition-opacity duration-300 p-0" aria-expanded="false" aria-haspopup="true" aria-label="Open member menu" data-member-menu-trigger>
                  {{#if @member.avatar_image}}
                    <img src="{{@member.avatar_image}}" alt="{{@member.firstname}}" class="w-8 h-8 rounded-full object-cover" onerror="this.style.display='none';this.nextElementSibling.style.display='flex'">
                    <span class="w-8 h-8 rounded-full bg-gray-200 text-gray-600 items-center justify-center text-xs font-semibold uppercase" style="display:none">{{> "icons/person-circle"}}</span>
                  {{else}}
                    {{> "icons/person-circle"}}
                  {{/if}}
                </button>
                <div class="absolute right-0 mt-3 w-56 border border-gray-200 bg-white shadow-lg overflow-hidden transform opacity-0 translate-y-1 scale-95 pointer-events-none transition duration-150 ease-out z-50" data-member-menu-dropdown>
                  {{#if @member.email}}
                    <div class="w-full px-4 pt-3 pb-3 border-b border-gray-100 text-xs font-medium text-gray-600 truncate" title="{{@member.email}}">
                      {{@member.email}}
                    </div>
                  {{/if}}
                  {{#if @member.paid}}
                    <a href="/press/" class="block px-4 py-2.5 text-sm font-medium text-gray-800 hover:bg-gray-075 transition-colors duration-200">Perks</a>
                    <a href="https://billing.stripe.com/p/login/00w4gB7P21zn0qVae19oc00" class="block px-4 py-2.5 text-sm font-medium text-gray-800 hover:bg-gray-075 transition-colors duration-200" data-prefill-param="prefilled_email" {{#if @member.email}}data-member-email="{{@member.email}}"{{/if}}>Billing</a>
                  {{/if}}
                  <a href="#/portal/account" data-portal="account" class="block px-4 py-2.5 text-sm font-medium text-gray-800 hover:bg-gray-075 transition-colors duration-200">Account</a>
                  <a href="javascript:" data-members-signout class="block px-4 py-2.5 text-sm font-medium text-gray-800 hover:bg-gray-075 border-t border-gray-100 transition-colors duration-200">Sign out</a>
                </div>
              </div>
            {{/unless}}
          </div>
        {{/unless}}
      </div>
    </nav>
  </div>
</header>

{{#if @member}}
<script>
document.addEventListener('DOMContentLoaded', function () {
  var memberMenu = document.querySelector('[data-member-menu]');
  if (memberMenu) {
    var trigger = memberMenu.querySelector('[data-member-menu-trigger]');
    var dropdown = memberMenu.querySelector('[data-member-menu-dropdown]');
    var hoverTimeout;
    var isOpen = false;
    var openedByHover = false;
    var supportsHover = window.matchMedia('(hover: hover) and (pointer: fine)').matches;

    var closeMenu = function () {
      if (!dropdown) return;
      isOpen = false;
      openedByHover = false;
      dropdown.classList.add('opacity-0', 'pointer-events-none', 'translate-y-1', 'scale-95');
      dropdown.classList.remove('opacity-100', 'translate-y-0', 'scale-100');
      if (trigger) {
        trigger.setAttribute('aria-expanded', 'false');
      }
    };

    var openMenu = function (source) {
      if (!dropdown) return;
      isOpen = true;
      if (source === 'hover') {
        openedByHover = true;
      }
      dropdown.classList.remove('opacity-0', 'pointer-events-none', 'translate-y-1', 'scale-95');
      dropdown.classList.add('opacity-100', 'translate-y-0', 'scale-100');
      if (trigger) {
        trigger.setAttribute('aria-expanded', 'true');
      }
    };

    closeMenu();

    if (trigger) {
      var toggleMenu = function (event) {
        if (event) {
          event.preventDefault();
        }
        if (supportsHover && openedByHover) {
          openedByHover = false;
          openMenu();
          return;
        }
        if (isOpen) {
          closeMenu();
        } else {
          openMenu();
        }
      };

      var pointerUsed = false;
      if (window.PointerEvent) {
        trigger.addEventListener('pointerup', function (event) {
          pointerUsed = true;
          toggleMenu(event);
        });
      }

      trigger.addEventListener('click', function (event) {
        if (pointerUsed) {
          pointerUsed = false;
          return;
        }
        toggleMenu(event);
      });
    }

    if (supportsHover) {
      memberMenu.addEventListener('mouseenter', function () {
        clearTimeout(hoverTimeout);
        openMenu('hover');
      });

      memberMenu.addEventListener('mouseleave', function () {
        hoverTimeout = setTimeout(closeMenu, 100);
      });
    }

    document.addEventListener('click', function (event) {
      if (!memberMenu.contains(event.target)) {
        closeMenu();
      }
    });

    document.addEventListener('keydown', function (event) {
      if (event.key === 'Escape') {
        closeMenu();
      }
    });

    window.addEventListener('pagehide', closeMenu);
    window.addEventListener('beforeunload', closeMenu);

    dropdown.querySelectorAll('a').forEach(function (link) {
      link.addEventListener('click', closeMenu);
    });
  }

  var prefillLinks = document.querySelectorAll('[data-prefill-param][data-member-email]');
  prefillLinks.forEach(function (link) {
    var email = link.getAttribute('data-member-email');
    var param = link.getAttribute('data-prefill-param');
    if (!email || !param) {
      return;
    }

    var href = link.getAttribute('href') || '';
    try {
      var url = new URL(href, window.location.origin);
      url.searchParams.set(param, email);
      link.setAttribute('href', url.toString());
    } catch (e) {
      var separator = href.indexOf('?') === -1 ? '?' : '&';
      link.setAttribute('href', href + separator + encodeURIComponent(param) + '=' + encodeURIComponent(email));
    }
  });
});
</script>
{{/if}}

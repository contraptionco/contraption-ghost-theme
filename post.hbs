{{!< app}}
{{#post}}
  {{#has tag="workshop"}}
  <style>.gh-viewport { background-color: #F6F4F1; }</style> {{!-- offwhite-warm --}}
  {{/has}}
  {{> prose page=this h1="true"}}

  {{!-- Subscription CTA for non-members --}}
  <div class="container mx-auto pb-8 md:pb-16 lg:pb-24">
    {{> "subscribe-cta"}}
  </div>

  {{!-- Recommended posts section --}}
  <div class="container mx-auto pb-8 md:pb-16 lg:pb-24">
    <h3 class="font-sans text-xs font-semibold tracking-[0.15em] uppercase text-gray-500 mb-8">Keep reading</h3>
    <div class="flex flex-wrap -mx-4">
      {{!-- Get 3 random posts excluding the current one --}}
      {{#get "posts" filter="id:-{{id}}+visibility:{{visibility}}" include="authors" limit="3" as |recommended|}}
        {{#foreach recommended}}
          <div class="w-full md:w-1/3 px-4 mb-10 reveal">
            {{> "card"}}
          </div>
        {{/foreach}}
      {{/get}}
    </div>
  </div>
{{/post}}

{{!< app}}
{{#post}}
  {{> prose page=this h1="true"}}

  {{!-- Subscription CTA for non-members --}}
  {{#unless @member}}
  <div class="container mx-auto pb-8 md:pb-16 lg:pb-24">
    <div class="mx-auto max-w-2xl border border-gray-950 dark:border-gray-200 p-8 text-center">
      <div class="mb-6 mx-auto text-center">
        <h3 class="text-3xl md:text-4xl font-semibold display mb-2">Subscribe for free</h3>
        <p class="text-xl display font-medium text-gray-700 dark:text-gray-300 mb-4">Crafting digital tools</p>
      </div>
      <div class="pt-4">
        <form data-members-form="subscribe" class="inline-flex flex-col items-center w-full">
          <div class="flex items-center w-full md:w-2/3">
            <input data-members-email type="email" placeholder="Enter your email"
              class="border border-gray-900 dark:border-gray-100 p-2 flex-grow outline-none focus:outline-none w-full focus:ring-0 focus:border-gray-900 dark:focus:border-gray-100 h-10 dark:bg-gray-800 dark:text-gray-100"
              required>
            <button type="submit" class="btn btn-primary relative" data-loading-text="Subscribing">
              <span class="btn-text font-bold">Join</span>
              <span class="btn-arrow">{{> "icons/arrow-right"}}</span>
            </button>
          </div>
          <div class="mt-2">
            <p data-members-error class="text-red text-xs comp hidden"></p>
            <p data-members-success class="text-green text-xs comp hidden">Great! Check your inbox and click the link to confirm your subscription.</p>
          </div>
          <div class="mt-4 w-full md:w-2/3 flex flex-col items-center gap-4">
            <div class="flex items-center justify-center w-full">
              <span class="px-3 text-xs font-medium text-gray-700 dark:text-gray-200 compact">
                or
              </span>
            </div>
            <a href="https://trivet.contraption.co/sign-in/fc8a8958-dbd6-42bc-9d00-f42e9b6abbe3" class="inline-flex items-center justify-center">
              <img src="{{asset 'images/google/google-signin-light.svg'}}" alt="Sign up with Google" class="h-10 w-auto dark:hidden">
              <img src="{{asset 'images/google/google-signin-dark.svg'}}" alt="Sign up with Google" class="h-10 w-auto hidden dark:inline">
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
  {{/unless}}

  {{!-- Recommended posts section --}}
  <div class="container mx-auto pb-8 md:pb-16 lg:pb-24">
    <div class="flex flex-wrap -mx-4">
      {{!-- Get 3 random posts excluding the current one --}}
      {{#get "posts" filter="id:-{{id}}+visibility:{{visibility}}" include="authors" limit="3" as |recommended|}}
        {{#foreach recommended}}
          <div class="w-full md:w-1/3 px-4 mb-10">
            {{> "card"}}
          </div>
        {{/foreach}}
      {{/get}}
    </div>
  </div>
{{/post}}

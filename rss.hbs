{{!< blank}}
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
  xmlns:content="http://purl.org/rss/1.0/modules/content/"
  xmlns:atom="http://www.w3.org/2005/Atom"
  xmlns:dc="http://purl.org/dc/elements/1.1/"
  xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title><![CDATA[{{@site.title}}]]></title>
    <link>{{@site.url}}</link>
    {{#if @site.description}}
    <description><![CDATA[{{@site.description}}]]></description>
    {{/if}}
    {{#if @site.locale}}
    <language>{{@site.locale}}</language>
    {{/if}}
    <atom:link href="{{@site.url}}/rss/" rel="self" type="application/rss+xml" />
    <generator>Ghost</generator>
    <ttl>60</ttl>
    {{#if @site.icon}}
    <image>
      <url>{{img_url @site.icon absolute="true"}}</url>
      <title><![CDATA[{{@site.title}}]]></title>
      <link>{{@site.url}}</link>
    </image>
    {{/if}}

    {{!-- All published posts; Content API applies gating so paid/members-only posts only expose their public preview --}}
    {{#get "posts" filter="status:published" include="authors,tags" order="published_at desc" limit="50"}}
      {{#if posts.[0]}}
      <lastBuildDate>{{date posts.[0].published_at format="ddd, DD MMM YYYY HH:mm:ss ZZ"}}</lastBuildDate>
      {{/if}}

      {{#foreach posts}}
        <item>
          <title><![CDATA[{{title}}]]></title>
          <link>{{url absolute="true"}}</link>
          <guid isPermaLink="false">{{id}}</guid>
          <pubDate>{{date published_at format="ddd, DD MMM YYYY HH:mm:ss ZZ"}}</pubDate>
          <description><![CDATA[{{#if custom_excerpt}}{{custom_excerpt}}{{else}}{{excerpt words="50"}}{{/if}}]]></description>
          {{#if primary_author}}
          <dc:creator><![CDATA[{{primary_author.name}}]]></dc:creator>
          {{/if}}
          {{#foreach tags}}
            {{#match visibility "!=" "internal"}}
            <category><![CDATA[{{name}}]]></category>
            {{/match}}
          {{/foreach}}
          {{#if feature_image}}
          <media:content url="{{img_url feature_image absolute="true"}}" medium="image" />
          {{/if}}
          <content:encoded><![CDATA[{{{html}}}]]></content:encoded>
        </item>
      {{/foreach}}
    {{/get}}
  </channel>
</rss>

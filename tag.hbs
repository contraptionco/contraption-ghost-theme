{{!< app}}

<div class="gh-page">
  <div class="container py-8 md:py-12">

    {{#tag}}
    <header class="mb-12 md:mb-16">
      <h1 class="font-sans text-3xl sm:text-4xl md:text-5xl font-semibold tracking-tight text-gray-950">{{name}}</h1>
      <p class="font-serif text-lg text-gray-600 mt-4 leading-relaxed">
        {{#if description}}
          {{description}}
        {{else}}
          A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
        {{/if}}
      </p>
      {{#if feature_image}}
        <img class="mt-8 w-full" src="{{feature_image}}" alt="{{name}}" />
      {{/if}}
    </header>
    {{/tag}}

    <div class="gh-postfeed">
      <div class="flex flex-wrap -mx-4">
        {{#foreach posts}}
          <div class="w-full md:w-1/2 lg:w-1/3 px-4 mb-10 reveal">
            {{> "card"}}
          </div>
        {{/foreach}}
      </div>
    </div>

    {{!-- Pagination --}}
    <div class="gh-pagination flex justify-center mt-8">
      {{pagination}}
    </div>

    <noscript>
      <div class="gh-pagination flex justify-center mt-8">
        {{pagination}}
      </div>
    </noscript>
  </div>
</div>
